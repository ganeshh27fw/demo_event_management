<section class="vh-100 ">
    <div class="container py-5 h-100">
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card gradient-custom text-white" style="border-radius: 1rem;">
          <div class="card-body register-card p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, class:'form-group',url: registration_path(resource_name)) do |f| %>
  

   <div data-mdb-input-init class="form-outline form-white mb-4">
   
    <%= f.text_field :firstname, class:"form-control form-control-lg",autofocus: true %>
     <%= f.label :firstname , class:"form-label"%>
  </div>

  <div data-mdb-input-init class="form-outline form-white mb-4">
    
    <%= f.text_field :lastname , class:"form-control form-control-lg" %>
    <%= f.label :lastname , class:"form-label"%>
  </div>

   <div data-mdb-input-init class="form-outline form-white mb-4">
    
    <%= f.text_field :mobile , class:"form-control form-control-lg"%>
    <%= f.label :mobile , class:"form-label"%>
  </div>


  <div data-mdb-input-init class="form-outline form-white mb-4">
    
    <%= f.email_field :email, class:"form-control form-control-lg", autofocus: true, autocomplete: "email" %>
    <%= f.label :email , class:"form-label"%>
  </div>

   <div data-mdb-input-init class="form-outline form-white mb-4">
    
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"form-control form-control-lg" ,autocomplete: "new-password" %>
    <%= f.label :password , class:"form-label"%>
  </div>

  <div data-mdb-input-init class="form-outline form-white mb-4">
    
    <%= f.password_field :password_confirmation, class:"form-control form-control-lg", autocomplete: "new-password" %>
    <%= f.label :password_confirmation, class:"form-label" %>
  </div>

  <div class="actions ">
    <%= f.submit "Sign up"  %>
  </div>
<% end %>

<div class='text-white mt-3 login-botton-link'>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</section>
