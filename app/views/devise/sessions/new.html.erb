

<section class="vh-100 ">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-top h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card gradient-custom text-white" style="border-radius: 1rem;">
          <div class="card-body login-card p-5 text-center">

            <div class="mb-md-5 mt-md-4 ">

              <%= form_for(resource, as: resource_name, class:'form-group', url: session_path(resource_name)) do |f| %>

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>

              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= f.email_field :email, class:"form-control form-control-lg", autofocus: true, autocomplete: "email" %>
               
                <%= f.label :email ,class:"form-label"%>
                
              </div>

              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= f.password_field :password,class:"form-control form-control-lg" , autocomplete: "current-password" %>

                 <%= f.label :password , class:"form-label"%><br />
    
                
              </div>
             

              

              <div class="actions ">
    <%= f.submit  "Log in" %>
  </div>
 <% end %>  
 
           <p class="small mb-5 pb-lg-2"><%= render "devise/shared/links" %></p>


            <%#   <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div> %>

            </div>

            <div class='login-bottom-link'>
              <p class="mb-0">Don't have an account? <a href="#!" class="text-white-50 pb-5 fw-bold"> <%= link_to "Sign up", new_registration_path(resource_name) %></a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
