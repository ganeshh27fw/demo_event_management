<section class="vh-100 ">

  <div class="container py-5 h-100">
     <
    <div class="row d-flex justify-content-center align-items-top h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card gradient-custom  text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

<h2>Create New Ticket Type</h2>

<%= form_with model: [@event, @ticket_type], local: true do |form| %>
  <% if @ticket_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket_type.errors.count, "error") %> prohibited this ticket type from being saved:</h2>
      <ul>
        <% @ticket_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-tt-field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="input-tt-field">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

   <div class="input-tt-field">
    <%= form.label :total_quantity %>
    <%= form.number_field :total_quantity %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
</div>
